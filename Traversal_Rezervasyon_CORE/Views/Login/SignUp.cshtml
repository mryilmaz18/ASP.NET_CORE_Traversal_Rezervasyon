          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Traversal Rezervasyon</h5>
                            <h3>HESAP OLUŞTURUN </h3>
                            <p>
                                Kanuni Kervansaray Historical Hotel Çeşme Otel Tanıtımı Çeşme Kanuni Kervansaray Hotel’in, Osmanlı döneminin tüm görkemini yansıtan dekorasyonu ile kendinizi 16yy’ın atmosferinden, 21yy’ın ustalıkla gizlenmiş teknolojisine…
                            </p>
                            <a href="index.html" class="read-more-1 btn">Hadi Başlayalım</a>
                        </div>

                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bize Katılın</h4>
                        <p>Hemen ücretsiz hesap oluşturun :)</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text"  asp-for="Name" />
                            <span style="color: red;"  asp-validation-for="Name"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyadınız</label>
                            <input type="text"  asp-for="Surname" />
                            <span style="color: red;" asp-validation-for="Surname" ></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" asp-for="Username" />
                            <span style="color: red;" asp-validation-for="Username"></span>
                        </div>
                        <div class="form-input">
                            <label>E-mail Adresiniz</label>
                            <input type="email" asp-for="Mail" />
                            <span style="color: red;" asp-validation-for="Mail"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifreniz</label>
                            <input type="password" asp-for="Password" />
                            <span style="color: red;" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifrenizi Onaylayınız</label>
                            <input type="password" asp-for="ConfirmPassword" />
                            <span style="color: red;" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div style="color: red;" class="text-danger"asp-validation-summary="ModelOnly" > </div>

                        <label class="container">
                            Şartları okudum <a href="#">ve </a> Kabul ediyorum
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Kayıt Ol</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year Tüm Hakları Saklıdır!
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section>
    <!-- //login-section -->
</body>

</html>